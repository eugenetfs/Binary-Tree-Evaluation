<Window x:Class="Binary_Tree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binary_Tree"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="150" Width="325">
    <Grid>
        <TextBox BorderThickness="2" BorderBrush="Black" FontSize="15" TextAlignment="Left" Text="{Binding ConvertText}" Margin="10" VerticalAlignment="Top"/>
        <Button VerticalAlignment="Center" Height="20" Content="Convert" HorizontalAlignment="Center" Command="{Binding ConvertCommand}" Margin="0,20,0,0"/>
    </Grid>
</Window>
